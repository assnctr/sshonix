{
    "compilerOptions": {
        "target": "ESNext",
        "useDefineForClassFields": true,
        "module": "ESNext",
        "moduleResolution": "Node",
        "strict": true,
        "jsx": "preserve",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "esModuleInterop": true,
        "lib": ["ESNext", "DOM"],
        "skipLibCheck": true,
        "noEmit": true,
        "paths": {
            "front/*": ["./src/*"],
            "core/*": ["./electron/core/*"],
            "types/*": ["./@types/*"]
        }
    },
    "include": ["src", "@types/rv.d.ts", "@types/vite-env.d.ts"],
    "references": [{ "path": "./tsconfig.node.json" }]
}
